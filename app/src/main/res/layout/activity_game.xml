<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bryancapps.blackjack.GameActivity">

    <RelativeLayout
        android:id="@+id/dealerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="13">

        <TextView
            android:id="@+id/dealerTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/dealer_text"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/dealerHand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dealerFirstCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/dealer_first_card_hint"
                android:src="@drawable/b2fv" />

            <ImageView
                android:id="@+id/dealerSecondCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-50dp"
                android:contentDescription="@string/dealer_second_card_hint"
                android:src="@drawable/b2fv" />

        </LinearLayout>

        <TextView
            android:id="@+id/dealerScoreTextView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/dealerHand"
            android:ellipsize="end"
            android:gravity="right"
            android:text="@string/dealer_initial_score" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="13">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_text"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/moneyLabelTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/your_money_label" />

            <TextView
                android:id="@+id/moneyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="@string/your_money" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerHand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playerFirstCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/player_first_card_hint"
                android:src="@drawable/b2fv" />

            <ImageView
                android:id="@+id/playerSecondCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-50dp"
                android:contentDescription="@string/player_second_card_hint"
                android:src="@drawable/b2fv" />

        </LinearLayout>

        <TextView
            android:id="@+id/playerScoreTextView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/playerHand"
            android:ellipsize="end"
            android:gravity="right"
            android:text="@string/dealer_initial_score" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/betDecisionView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/betAdjusterView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/decrementBetButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="decrementBet"
                android:text="@string/decrement_bet"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/betTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zero_dollars"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:textSize="36sp" />

            <Button
                android:id="@+id/incrementBetButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="incrementBet"
                android:text="@string/increment_bet"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/betButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:enabled="false"
            android:onClick="onBet"
            android:text="@string/bet"
            android:textSize="24sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hittingAndStayingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:context="com.bryancapps.blackjack.GameActivity">

        <LinearLayout
            android:id="@+id/hitAndStay"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/hitButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onHit"
                android:text="@string/hit"
                android:textSize="20sp" />

            <Button
                android:id="@+id/stayButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onStay"
                android:text="@string/stay"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/betAndLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/betLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/your_bet_label" />

            <TextView
                android:id="@+id/betTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/zero_dollars"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/doubleAndSplit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:orientation="vertical">

            <Button
                android:id="@+id/doubleButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onDouble"
                android:text="@string/doubleBet"
                android:textSize="20sp" />

            <Button
                android:id="@+id/splitButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:enabled="false"
                android:onClick="onSplit"
                android:text="@string/split"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/playAgainView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        tools:context="com.bryancapps.blackjack.GameActivity">

        <TextView
            android:id="@+id/handOverTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="playAgain"
            android:text="@string/play_again" />
    </LinearLayout>

</LinearLayout>